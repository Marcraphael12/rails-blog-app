<main>
<section>
    <ul>
      <% @posts.each do |post| %>
        <%= link_to user_post_path(user_id: post.author_id, id: post.id) do %>
          <li class="card hover column">
            <div class="card column">
              <h2><%= post.title %></h2>
              <p><%= post.text %></p>
              <div class="right">
                <span>Comments: <%= post.comments_counter %></span>
                <span>Likes: <%= post.likes_counter %> </span>
              </div>
            </div>
            <div class="commets-container">
              <h4>Comments:</h4>
              <ul>
                <% post.recent_comments.each do |comment| %>
                  <p><%= comment.author.name %>: <%= comment.text %></p>
                <% end %>
              </ul>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
  <section>
    <div class="card pagination">
      <div class="user-image border">
        <%= image_tag(@user.photo, class: "add-css-class") %>
      </div>
      <div class="user-data border">
        <h1><%= @user.name %></h1>
        <% if current_user %>
          <%= link_to "Add a post",new_user_post_path(@user), method: :get, class: "btn right" %>
        <% end %>
      </div>
    </div>
  </section>
</main>
